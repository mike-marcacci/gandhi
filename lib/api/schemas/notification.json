{
  "id": "http://www.gandhi.io/schema/notification",
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "required": [
    "id",
    "user_id",
    "subject",
    "content"
  ],
  "additionalProperties": false,
  "properties":{
    "id": {
      "type": "string"
    },
    "user_id": {
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "status_id": {
      "type": "string",
      "enum": [
        "unread",
        "read",
        "archived"
      ],
      "default": "unread"
    },
    "created": {
      "type": "number"
    },
    "updated": {
      "type": "number"
    }
  }
}
