{
  "id": "cycle",
  "$schema": "http://json-schema.org/draft-04/schema",
  "required": [
    "title"
  ],
  "type":"object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "events": {
      "type": "object",
      "default": {
        "open": {
          "id": "open",
          "title": "Application Window Opened",
          "messages": [
            "Applications are not yet being accepted.",
            "Applications are being accepted."
          ],
          "conditions": [
            [
              {
                "name": "date",
                "options": {
                  "mode": "after",
                  "date": {
                    "$reql_type$": "TIME",
                    "epoch_time": 1405203171.364,
                    "timezone": "+00:00"
                  }
                }
              }
            ]
          ],
          "listeners": []
        },
        "close": {
          "id": "close",
          "title": "Application Window Closed",
          "messages": [
            "Applications are still open.",
            "Applications are no longer being accepted."
          ],
          "conditions": [
            [
              {
                "name": "date",
                "options": {
                  "mode": "after",
                  "date": {
                    "$reql_type$": "TIME",
                    "epoch_time": 1406203171.364,
                    "timezone": "+00:00"
                  }
                }
              }
            ]
          ],
          "listeners": []
        }
      },
      "additionalProperties": {
        "type": "object",
        "required": [
          "id",
          "title"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0#"}
          },
          "title": {
            "type": "string"
          },
          "messages": {
            "type": "array",
            "default": [
              "",
              ""
            ],
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "conditions": {
            "type": "array",
            "default": [],
            "items": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["name"],
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "options": {
                    "type": "object",
                    "additionalProperties": true,
                    "default": {}
                  }
                }
              }
            }
          },
          "listeners": {
            "type": "array",
            "default": [],
            "items": {
              "type": "object",
              "required": ["name"],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string"
                },
                "options": {
                  "type": "object",
                  "additionalProperties": true,
                  "default": {}
                }
              }
            }
          }
        }
      }
    },
    "root": {
      "type": "string",
      "default": "start"
    },
    "flow": {
      "type": "object",
      "default": {
        "start": {
          "id": "start",
          "title": "Start",
          "description": "Start your application!",
          "visible": [
            "applicant"
          ],
          "lock": {
            "open": [
              "open"
            ],
            "close": [
              "submit",
              "archive",
              "close"
            ]
          },
          "component": {
            "name": "start",
            "options": {
              "next": null,
              "role": "applicant",
              "permissions": {
                "write": [
                  "applicant"
                ]
              }
            }
          },
          "next": []
        }
      },
      "additionalProperties": {
        "type": "object",
        "required": ["id", "title", "component"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0#"}
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "default": ""
          },
          "visible": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            }
          },
          "lock": {
            "type": "object",
            "additionalProperties": false,
            "default": {
              "open": [],
              "close": []
            },
            "properties": {
              "open": {
                "type": "array",
                "default": [],
                "items": {
                  "type": "string"
                }
              },
              "close": {
                "type": "array",
                "default": [],
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "component": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "options": {
                "type": "object",
                "additionalProperties": true
              }
            }
          },
          "next": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "roles": {
      "type": "object",
      "default": {
        "applicant": {
          "id": "applicant",
          "title": "Applicant",
          "visible": [
            "applicant"
          ]
        }
      },
      "additionalProperties": {
        "type": "object",
        "required": [
          "id",
          "title",
          "visible"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0#"}
          },
          "title": {
            "type": "string"
          },
          "visible": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "status": {
      "type": "string",
      "default": "draft",
      "enum": [
        "draft",
        "active",
        "archived"
      ]
    },
    "statuses": {
      "type": "object",
      "default": {
        "active": {
          "id": "active",
          "title": "Active"
        },
        "accepted": {
          "id": "accepted",
          "title": "Accepted"
        },
        "rejected": {
          "id": "rejected",
          "title": "Rejected"
        },
        "archived": {
          "id": "archived",
          "title": "Archived"
        }
      },
      "additionalProperties": {
        "type": "object",
        "required": ["id", "title"],
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0#"}
          },
          "title": {
            "type": "string"
          }
        }
      }
    },
    "users": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0#"}
          },
          "role": {
            "type": "string",
            "default": {"$data": "2#defaults/role"}
          }
        }
      }
    }
  }
}
